{
  "name": "@repo/react",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "sideEffects": ["**/*.css"],
  "scripts": {
    "dev:ui": "tsup --watch",
    "dev:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/v2/index.css --watch",
    "build:ui": "tsup",
    "build:styles": "tailwindcss -i ./src/styles/globals.css -o ./dist/v2/index.css",
    "lint": "biome check --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/legacy.d.ts",
      "import": "./dist/legacy.mjs",
      "require": "./dist/legacy.js"
    },
    "./v2/components/*": {
      "types": "./dist/v2/components/*.d.ts",
      "import": "./dist/v2/components/*.mjs",
      "require": "./dist/v2/components/*.js"
    },
    "./v2/blocks/*": {
      "types": "./dist/v2/blocks/*.d.ts",
      "import": "./dist/v2/blocks/*.mjs",
      "require": "./dist/v2/blocks/*.js"
    },
    "./styles.css": "./dist/v2/index.css"
  },
  "dependencies": {
    "@raiadrogasil/pulso-design-tokens": "2.0.0",
    "clsx": "^2.1.1",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^1.0.0"
  },
  "devDependencies": {
    "@types/react": "18.3.12",
    "react": "18.3.1",
    "@tailwindcss/cli": "4.1.11",
    "tailwindcss": "4.1.11"
  }
}
